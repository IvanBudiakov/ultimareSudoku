<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sudoku World</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <link rel="icon" href="/icons/brain.ico">
</head>
<body>
        <h2>ultimate sudoku</h2>
        <div class="container deck-wrapper">     
            <% for( let row = 0; row < 9; row++ ) { %>
                <% if (row == 0) { %>
                    <div class="row row-1"> 
                <% } else if(row % 3 == 2){%>
                    <div class="row row-3"> 
                <% } else {%>
                    <div class="row">
                <% } %>  
                <% for( let col = 0; col < 9; col++ ) { %>
                    <% if(col==8){ %>
                       <div class="col col-last">
                    <% } else if (col == 0 || col == 3 || col == 6) { %>
                            <div class="col col-border">
                    <% } else {%>
                            <div class="col">
                    <% } %>
                        <input class = "input-box" type="text" maxlength="1" value = " <%= Math.floor((Math.random() * 9) + 1) %>  "       
                        oninput="this.value=this.value.replace(/[^0-9]/g,'');" />  
                    </div> <!-- col-->
                <% } %>
                </div>  <!-- row div-->
            <% } %>
        </div>   <!-- wrapper div -->

</body>