<body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <h2>ultimate sudoku</h2>
    <div class="container deck-wrapper">
      <% for( let row=0; row < 9; row++ ) { %>
        <% if (row==0) { %>
            <div class="row row-1">
        <% } else if(row==2 || row==5){%>
            <div class="row row-3">
        <% } else {%>
            <div class="row">
        <% } %>
        <% for( let col=0; col < 9; col++ ) { %>
          <% if(col==8){ %>
            <div class="col col-last">
          <% } else if (col==3 || col==6) { %>
            <div class="col col-border">
          <% } else {%>
            <div class="col">
          <% } %>

          <input autocomplete="off" class="input-box" maxlength="2" id = "cell-<%= (row*9+(col+1)) %>" type="text" oninput="this.value=this.value.replace(/[^1-9]/g,''); 
          checker(this.value, this.id)" 
          <% if(sudoku.board[row][col]!=0) { %>
            value = "<%= sudoku.board[row][col] %>"  disabled style = "background-color: #bd8958;"
          <%} %> 
          />
          </div> 
        <% } %>
            </div>
      <% } %>
    </div> 

    <div class="controls">
      <button type="button" class="btn btn-success control" onclick="game()">Submit</button>
      <button type="button" class="btn btn-danger control">Reset</button>
      <button type="button" class="btn btn-info control">New Deck</button>
    </div>


